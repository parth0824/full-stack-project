<% layout('layouts/boilerplate') -%> <!-- ejs-mate syntax -->
<div class="row"  style="height: 437px;"> 
    <div class="col-md-6 mx-auto"> 
        <form action="/products/<%=findproduct._id%>/?_method=patch" method="post">
            <div class="mb-3">
                <label class="form-label" for="name">Name : </label>
                <input placeholder="Enter the name of the product" value="<%= findproduct.name %>" class="form-control" name="name" id="name" type="text">
            </div>
            <div class="mb-3">
                <label class="form-label" for="img">Image url : </label>
                <input class="form-control" id="img" placeholder="Enter the image URL of the product" value="<%= findproduct.img %>" name="img" type="text">
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price : </label>
                <input class="form-control" value="<%= findproduct.price %>" placeholder="Enter the price of the product" name="price" id="price" type="number">
            </div>
            <div class="mb-3">
                <label class="form-label" for="desc">Description : </label>
                <textarea class="form-control"  id="desc" placeholder="Enter the description of the product" name="desc" cols="30" rows="5"><%=findproduct.desc%></textarea> 
            </div>
            <button type="submit" class="btn btn-success">Save</button>
        </form>
    </div>
</div>