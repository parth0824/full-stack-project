<% layout('layouts/boilerplate') -%> <!-- ejs-mate syntax -->
    <div class="row" style="height: 437px;">
        <div class="col-md-6 mx-auto">
            <form action="/products" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="name">Name : </label>
                    <input required placeholder="Enter the name of the product" class="form-control" name="name"
                        id="name" type="text">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="img">Image url : </label>
                    <input required class="form-control" id="img" placeholder="Enter the image URL of the product"
                        name="img" type="text">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Price : </label>
                    <input required class="form-control" placeholder="Enter the price of the product" name="price"
                        id="price" type="number">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="desc">Description : </label>
                    <textarea required class="form-control" id="desc" placeholder="Enter the description of the product"
                        name="desc" cols="30" rows="5"></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <button type="submit" class="btn btn-success">Add</button>
            </form>
        </div>
    </div>