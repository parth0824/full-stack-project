<% layout('layouts/boilerplate') -%> <!-- ejs-mate syntax -->
    <div class="row" style="height: 437px;">
        <div class="col-md-6 mx-auto">
            <form action="/products/<%=findproduct._id%>/?_method=patch" class="needs-validation" novalidate
                method="post">
                <div class="mb-3">
                    <label class="form-label" for="name">Name : </label>
                    <input required placeholder="Enter the name of the product" value="<%= findproduct.name %>"
                        class="form-control" name="name" id="name" type="text">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="img">Image url : </label>
                    <input required class="form-control" id="img" placeholder="Enter the image URL of the product"
                        value="<%= findproduct.img %>" name="img" type="text">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Price : </label>
                    <input required class="form-control" value="<%= findproduct.price %>"
                        placeholder="Enter the price of the product" name="price" id="price" type="number">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="desc">Description : </label>
                    <textarea required class="form-control" id="desc" placeholder="Enter the description of the product"
                        name="desc" cols="30" rows="5"><%=findproduct.desc%></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <button type="submit" class="btn btn-success">Save</button>
            </form>
        </div>
    </div>